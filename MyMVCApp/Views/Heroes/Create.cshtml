@model MyMVCApp.Models.HeroViewModel

<a asp-action="Index">Back</a>

<div>
    <h2>Creating form model</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Name" class="control-label"></label><br/>
            <input asp-for="Name" class="form-control"/><br/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ClassId"></label><br/>
            <select asp-for="ClassId" class="form-control" asp-items="ViewBag.SelectClasses"></select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="SkillIds"></label><br/>
            <select multiple asp-for="SkillIds" class="form-control" asp-items="ViewBag.SelectSkills"></select>
            <span asp-validation-for="SkillIds" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
